{
  "manifest_version": 3,
  "name": "AI Translator (Gemini 2.5) â€“ Vietnamese [JSONMODE]",
  "version": "1.3.0",
  "description": "Translate any page to Vietnamese using Google Gemini 2.5. Uses JSON mode (responseMimeType + responseSchema) with fallback.",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}